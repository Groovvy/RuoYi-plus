<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baosight.mgmt.mapper.TemplateMapper">

    <resultMap type="Template" id="TemplateResult">
        <result property="id" column="id"/>
        <result property="tmplCode" column="tmpl_code"/>
        <result property="tmplName" column="tmpl_name"/>
        <result property="tmplDesc" column="tmpl_desc"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateBy" column="update_by"/>
    </resultMap>

    <sql id="selectTemplateVo">
        select id, tmpl_code, tmpl_name, tmpl_desc, status, create_time, create_by, update_time, update_by from
        t_mgmt_template
    </sql>

    <select id="selectTemplateList" parameterType="Template" resultType="Template">
        SELECT
        id as id,
        tmpl_code as tmplCode,
        tmpl_name as tmplName,
        tmpl_desc as tmplDesc,
        status as status,
        create_time as createTime,
        create_by as createBy,
        update_time as updateTime,
        update_by as updateBy ,
        (select file_name from t_common_file where biz_code = tmpl_code and biz_type = '10' limit 1) as firstFileName,
        (select file_path from t_common_file where biz_code = tmpl_code and biz_type = '10' limit 1) as firstFilePath
        FROM
        t_mgmt_template
        <where>
            <if test="tmplCode != null  and tmplCode != ''">and tmpl_code = #{tmplCode}</if>
            <if test="tmplName != null  and tmplName != ''">and tmpl_name like concat('%', #{tmplName}, '%')</if>
            <if test="tmplDesc != null  and tmplDesc != ''">and tmpl_desc = #{tmplDesc}</if>
            <if test="status != null  and status != ''">and status = #{status}</if>
        </where>
    </select>

    <select id="selectTemplateById" parameterType="Long" resultMap="TemplateResult">
        <include refid="selectTemplateVo"/>
        where id = #{id}
    </select>

    <insert id="insertTemplate" parameterType="Template">
        insert into t_mgmt_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null ">id,</if>
            <if test="tmplCode != null  and tmplCode != ''">tmpl_code,</if>
            <if test="tmplName != null  and tmplName != ''">tmpl_name,</if>
            <if test="tmplDesc != null  and tmplDesc != ''">tmpl_desc,</if>
            <if test="status != null  and status != ''">status,</if>
            <if test="createTime != null ">create_time,</if>
            <if test="createBy != null  and createBy != ''">create_by,</if>
            <if test="updateTime != null ">update_time,</if>
            <if test="updateBy != null  and updateBy != ''">update_by,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null ">#{id},</if>
            <if test="tmplCode != null  and tmplCode != ''">#{tmplCode},</if>
            <if test="tmplName != null  and tmplName != ''">#{tmplName},</if>
            <if test="tmplDesc != null  and tmplDesc != ''">#{tmplDesc},</if>
            <if test="status != null  and status != ''">#{status},</if>
            <if test="createTime != null ">#{createTime},</if>
            <if test="createBy != null  and createBy != ''">#{createBy},</if>
            <if test="updateTime != null ">#{updateTime},</if>
            <if test="updateBy != null  and updateBy != ''">#{updateBy},</if>
        </trim>
    </insert>

    <update id="updateTemplate" parameterType="Template">
        update t_mgmt_template
        <trim prefix="SET" suffixOverrides=",">
            <if test="tmplCode != null  and tmplCode != ''">tmpl_code = #{tmplCode},</if>
            <if test="tmplName != null  and tmplName != ''">tmpl_name = #{tmplName},</if>
            <if test="tmplDesc != null  and tmplDesc != ''">tmpl_desc = #{tmplDesc},</if>
            <if test="status != null  and status != ''">status = #{status},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
            <if test="createBy != null  and createBy != ''">create_by = #{createBy},</if>
            <if test="updateTime != null ">update_time = #{updateTime},</if>
            <if test="updateBy != null  and updateBy != ''">update_by = #{updateBy},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTemplateById" parameterType="Long">
        delete from t_mgmt_template where id = #{id}
    </delete>

    <delete id="deleteTemplateByIds" parameterType="String">
        delete from t_mgmt_template where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <insert id="insertTmplCan">
        insert into t_mgmt_tmpl_can(tmpl_code, can_code) values(#{tmplCode},#{canCode})
    </insert>

    <insert id="insertTmplCont">
        insert into t_mgmt_tmpl_cont(tmpl_code, cont_code) values(#{tmplCode},#{contCode})
    </insert>

</mapper>